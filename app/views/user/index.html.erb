<table>
    <thead>
        <tr>
            <th>ID.</th>
            <th>Full Name</th>
            <th>ID Number</th>
            <th>Role</th>
            <th>E-mail</th>
            <th>Phone Number</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <% unless user.role == 2 %>
                <tr>
                    <td><%= user.id%>
                    <td><%= user.full_name %></td>
                    <td><%= user.id_number%>
                    <td>
                        <% if user.role == 1 %>
                            Client
                        <% elsif user.role == 2 %>
                            Administrator
                        <% end %>
                    </td>
                    <td><%= user.email %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.created_at %></td>
                    <td><%= user.updated_at %></td>
                    <td>
                        <%= link_to "Edit", edit_user_registration_path(user), class: "btn btn-primary" %>
                        <%= link_to "Delete", user_registration_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "btn btn-danger" %>
                    </td>
                </tr>
            <% end %>
        <% end %>

    </tbody>
</table>