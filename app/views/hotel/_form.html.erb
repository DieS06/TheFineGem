<%= form_with(model: @hotel, local: true) do |form| %>
    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <%= render partial: 'address/form', locals: { form: form } %>

    <div class="field">
        <%= form.label :city %>
        <%= form.text_field :city %>
    </div>

    <div class="field">
        <%= form.label :country %>
        <%= form.text_field :country %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>